{% extends 'base.html.twig' %}

{% block title %}Modifier mon mot de passe{% endblock %}

{% block body %}

    <section id="edit-account" class="text-light col-md-5 mx-auto mb-5 mt-4 pt-2 pb-5 px-4">

        {{ form_start(form) }}

        {{ form_row(form.old_password) }}
        {{ form_row(form.new_password) }}

        <div class="d-flex align-items-center mt-5">
            {{ form_row(form.submit) }}
            <div class="mb-3 ms-4">
                <a href="{{ path('app_account') }}" class="text-light">Annuler</a>
            </div>
        </div>

        {{ form_end(form) }}

    </section>

{% endblock %}