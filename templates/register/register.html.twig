{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}

    <div class="container-register pb-5">

    {{ form_start(form) }}

    <div class="col-md-7 mx-auto d-flex justify-content-around flex-wrap mt-5">

        <div class="container-register-left col-md-5 text-light mx-2">
            <div class="col-md-10">{{ form_row(form.firstname) }}</div>
            <div class="col-md-10">{{ form_row(form.lastname) }}</div>
            <div class="col-md-10">{{ form_row(form.phone) }}</div>
        </div>
        <div class="container-register-right d-flex flex-column align-items-end col-md-5 text-light mx-2">
            <div class="col-md-10">{{ form_row(form.email) }}</div>
            <div class="col-md-10">{{ form_row(form.password) }}</div>
        </div>

    </div>
    <div class="d-flex justify-content-center my-5">
        {{ form_row(form.submit) }}
    </div>

    {{ form_end(form) }}

        <div class="text-center col-md-10 mx-auto">
            <a href="{{ path('app_home') }}" class="text-light mx-auto" style="font-size: small">Revenir Ã  la page d'accueil</a>
        </div>

    </div>

{% endblock %}