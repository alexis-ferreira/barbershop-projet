{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}

    <div class="container-register py-5">

    <div class="title col-md-12 text-center fs-2 mt-5 text-light text-uppercase">{{ title }}</div>

    {{ form_start(form) }}

    <div class="col-md-8 mx-auto d-flex justify-content-center mt-5">

        <div class="container-register-left col-4 text-light">
            <div class="col-md-10">{{ form_row(form.firstname) }}</div>
            <div class="col-md-10">{{ form_row(form.lastname) }}</div>
            <div class="col-md-10">{{ form_row(form.phone) }}</div>
        </div>
        <div class="container-register-right d-flex flex-column align-items-end col-4 text-light">
            <div class="col-md-10">{{ form_row(form.email) }}</div>
            <div class="col-md-10">{{ form_row(form.password) }}</div>
        </div>

    </div>
    <div class="d-flex justify-content-center my-5">
        {{ form_row(form.submit) }}
    </div>

    {{ form_end(form) }}

    </div>

{% endblock %}